## Verify using bridge property with invalid property combinations results in validation error

assertError --err_type ValidationError --err_property "bridge" --err_message 'Properties "ipaddress"/"ipv6address" and "network_name" are not allowed if "bridge" is specified.' create -p /ms/network_interfaces/bondX -t bond -o device_name='bond9' network_name='test' bridge='brX'
assertError --err_type ValidationError --err_property "bridge" --err_message 'Properties "ipaddress"/"ipv6address" and "network_name" are not allowed if "bridge" is specified.' create -p /ms/network_interfaces/bondX -t bond -o device_name='bond9' bridge='brX' ipaddress='10.10.10.111'
assertError --err_type ValidationError --err_property "bridge" --err_message 'Properties "ipaddress"/"ipv6address" and "network_name" are not allowed if "bridge" is specified.' create -p /ms/network_interfaces/bondX -t bond -o device_name='bond9' bridge='brX' ipv6address='fe05::2'
assertError --err_type ValidationError --err_property "bridge" --err_message 'Properties "ipaddress"/"ipv6address" and "network_name" are not allowed if "bridge" is specified.' create -p /ms/network_interfaces/vlanZ -t vlan -o device_name='eth6.629' network_name='test' bridge='brX'
assertError --err_type ValidationError --err_property "bridge" --err_message 'Properties "ipaddress"/"ipv6address" and "network_name" are not allowed if "bridge" is specified.' create -p /ms/network_interfaces/vlanZ -t vlan -o device_name='eth6.629' ipaddress='10.10.10.111' bridge='brX'
assertError --err_type ValidationError --err_property "bridge" --err_message 'Properties "ipaddress"/"ipv6address" and "network_name" are not allowed if "bridge" is specified.' create -p /ms/network_interfaces/vlanZ -t vlan -o device_name='eth6.629' ipv6address='fe05::2' bridge='brX'
